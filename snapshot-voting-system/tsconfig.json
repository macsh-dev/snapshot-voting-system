{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "hardhat"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["./scripts", "./test", "./utils", "./helper-hardhat-config.ts", "./hardhat.config.ts"],
  "files": ["./hardhat.config.ts"]
}
